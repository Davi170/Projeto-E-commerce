@page
@model RegistroPessoa.Pages.SucessoModel
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loja de E-commerce</title>
    <link rel="stylesheet" href="~/css/estays.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <div class="container">
            <h1>Loja de E-commerce</h1>
            <nav>
                <ul>
                    <li><a href="#home">Home</a></li>
                    <li><a href="#produtos">Produtos</a></li>
                    <li><a href="#contato">Contato</a></li>
                    <li>
                        <a href="#" id="cart-icon"><i class="fas fa-shopping-cart"></i> <span id="cart-count">0</span></a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <main>
        <section class="banner">
            <div class="container">
                <h2>Bem-vindo à Nossa Loja!</h2>
                <p>Descubra produtos incríveis e ofertas imperdíveis!</p>
                <button onclick="scrollToProdutos()">Ver Produtos</button>
            </div>
        </section>

        <section id="produtos" class="container">
            <h2>Produtos em Destaque</h2>
            <div class="produtos">
                <div class="produto">
                    <img src="~/imagens/blusa.jpg" alt="Produto 1">
                    <h3>Produto 1</h3>
                    <p>Blusa de Algodão 1. Um produto de alta qualidade.</p>
                    <span>R$ 99,99</span>
                    <button onclick="adicionarAoCarrinho('Produto 1', 99.99)"><i class="fas fa-shopping-cart"></i> Adicionar ao Carrinho</button>
                </div>
                <div class="produto">
                    <img src="~/imagens/conjunto.jpg" alt="Produto 2">
                    <h3>Produto 2</h3>
                    <p>Conjunto de Bermuda e Camiseta  2. Um produto incrível.</p>
                    <span>R$ 149,99</span>
                    <button onclick="adicionarAoCarrinho('Produto 2', 149.99)"><i class="fas fa-shopping-cart"></i> Adicionar ao Carrinho</button>
                </div>
                <div class="produto">
                    <img src="~/imagens/calça.jpg" alt="Produto 3">
                    <h3>Produto 3</h3>
                    <p>Calça Cargo Masculina 3. O melhor da categoria.</p>
                    <span>R$ 79,99</span>
                    <button onclick="adicionarAoCarrinho('Produto 3', 79.99)"><i class="fas fa-shopping-cart"></i> Adicionar ao Carrinho</button>
                </div>
                <div class="produto">
                    <img src="~/imagens/boné.jpg" alt="Produto 4">
                    <h3>Produto 4</h3>
                    <p>Boné da New Era Masculino 4. Ideal para o seu dia a dia.</p>
                    <span>R$ 129,99</span>
                    <button onclick="adicionarAoCarrinho('Produto 4', 129.99)"><i class="fas fa-shopping-cart"></i> Adicionar ao Carrinho</button>
                </div>
                <div class="produto">
                    <img src="~/imagens/óculos.jpg" alt="Produto 5">
                    <h3>Produto 5</h3>
                    <p>Óculos de Sol Barcelona 5. Produto popular entre os clientes.</p>
                    <span>R$ 59,99</span>
                    <button onclick="adicionarAoCarrinho('Produto 5', 59.99)"><i class="fas fa-shopping-cart"></i> Adicionar ao Carrinho</button>
                </div>
                <div class="produto">
                    <img src="~/imagens/conjunto2.jpg" alt="Produto 6">
                    <h3>Produto 6</h3>
                    <p>Conjunto de Moletom, Calça e Boné Aba Curva 6. Elegante e funcional.</p>
                    <span>R$ 199,99</span>
                    <button onclick="adicionarAoCarrinho('Produto 6', 199.99)"><i class="fas fa-shopping-cart"></i> Adicionar ao Carrinho</button>
                </div>
            </div>
        </section>

        
        <section id="cart" class="cart">
            <h2>Carrinho de Compras</h2>
            <div id="cart-items">
                <p>Seu carrinho está vazio.</p>
            </div>
            <div id="cart-total">
                <p>Total: R$ <span id="total-value">0.00</span></p>
            </div>
            <button id="clear-cart" onclick="limparCarrinho()">Limpar Carrinho</button>
        </section>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2024 Loja de E-commerce. Todos os direitos reservados.</p>
        </div>
    </footer>
</body>
</html>
